    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ninja",
            "type": "shell",
            "command": "cd build && ninja",
            "problemMatcher": [],
            "icon": {
                "id": "sync"
            }
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "cd build && sudo ninja install",
            "problemMatcher": [],
            "icon": {
                "id": "arrow-down"
            }
        },
        {
            "label": "Launch application",
            "type": "shell",
            "command": "dbus-daemon --session --fork && ./build/src/com.github.sdv43.whaler",
            "problemMatcher": [],
            "icon": {
                "id": "run"
            }
        },
        {
            "label": "Switch to dark mode",
            "type": "shell",
            "command": "gsettings set org.gnome.desktop.interface color-scheme prefer-dark",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "close": true,
                "clear": false,
                "showReuseMessage": false,
                "panel": "new"
            },
            "icon": {
                "id": "eye"
            }
        },
        {
            "label": "Switch to light mode",
            "type": "shell",
            "command": "gsettings set org.gnome.desktop.interface color-scheme prefer-light",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "close": true,
                "clear": false,
                "showReuseMessage": false,
                "panel": "new"
            },
            "icon": {
                "id": "eye"
            }
        }
    ]
}