<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/jumpyvi/blubber/" id="com.github.jumpyvi.blubber">
    <key name="window-position" type="(ii)">
      <default>(-1,-1)</default>
      <summary>Window position</summary>
    </key>
    <key name="window-size" type="(ii)">
      <default>(800,600)</default>
      <summary>Window size</summary>
    </key>
    <key name="window-is-maximized" type="b">
      <default>false</default>
      <summary>Whether the window is maximized</summary>
    </key>
    <key name="main-screen-search-term" type="s">
      <default>""</default>
      <summary>Search entry value</summary>
    </key>
    <key name="main-screen-sorting" type="i">
      <default>0</default>
      <summary>Selected sorting code</summary>
    </key>
